extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +alert-success(5000)
    h1(class="mb-4") Danh sách Lời mời đã nhận
    include ../../partials/list-btn-user.pug

    .row 
        each user in accounts
            .col-md-4.mb-3
                .card.shadow-sm(style="border:none; background:#fff;")
                    .card-body.p-3
                        img(src=user.avatar ? user.avatar : "/images/avatar trang.jpg", alt=user.fullName, width="60", height="60", class="rounded-circle mb-2")
                        h5 #{user.fullName}
                        div(class= "inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-primary"
                                    type="button"
                                    btn-accept-friend = user._id
                                ) Chấp nhận
                                button(
                                    class="btn btn-secondary"
                                    type="button"
                                    style ="display:none;"
                                    disabled
                                ) Đã xoá
                                a(
                                    href=prefixAdmin + "/user/" + user._id
                                    class="btn btn-info"
                                ) Xem chi tiết
                                button(
                                    class="btn btn-danger"
                                    type="button"
                                    btn-refuse-friend = user._id
                                ) Xoá lời mời
                                
                                
block scripts
    script(src="/admin/js/user.js")
    